{
    "name": "k8s",
    "displayName": "k8s",
    "description": "Kubernetes Developer Tools",
    "version": "0.0.1",
    "publisher": "r2d4",
    "engines": {
        "vscode": "^1.21.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:k8s.skaffoldRun",
        "onLanguage:yaml"
    ],
    "main": "./out/extension",
    "contributes": {
        "menus": {
            "editor/context": [
                {
                    "when": "resourceFilename =~ /[Ss]kaffold/",
                    "command": "k8s.skaffoldRun",
                    "group": "skaffold"
                },
                {
                    "when": "resourceFilename =~ /[Ss]kaffold/",
                    "command": "k8s.skaffoldDev",
                    "group": "skaffold"
                }
            ],
            "explorer/context": [
                {
                    "when": "resourceFilename =~ /[Ss]kaffold/",
                    "command": "k8s.skaffoldRun",
                    "group": "skaffold"
                },
                {
                    "when": "resourceFilename =~ /[Ss]kaffold/",
                    "command": "k8s.skaffoldDev",
                    "group": "skaffold"
                }
            ]
        },
        "commands": [
            {
                "command": "k8s.skaffoldRun",
                "title": "K8s: skaffold run",
                "description": "Run skaffold",
                "category": "K8s"
            },
            {
                "command": "k8s.skaffoldDev",
                "title": "K8s: skaffold dev",
                "description": "Run skaffold dev",
                "category": "K8s"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
